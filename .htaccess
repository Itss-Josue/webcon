<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # üîπ Ajusta la ruta base seg√∫n la carpeta de tu proyecto en el hosting
    # Si tu sistema est√° en public_html/webcon/ usa esta:
    RewriteBase /webcon/

    # Redirigir la ra√≠z "/" al login
    RewriteRule ^$ index.php?url=auth/login [L,QSA]

    # Si no existe archivo o carpeta, redirigir a index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>
