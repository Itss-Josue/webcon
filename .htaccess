<IfModule mod_rewrite.c>
    RewriteEngine On

    # Ajusta la ruta base según tu carpeta

    # Si alguien entra al raíz → admin login
    RewriteRule ^$ index.php?rout=admin:login [L,QSA]

    # Rutas tipo /controller/action/123 → index.php?route=controller:action&id=123
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^/]+)/?([^/]*)/?([^/]*)/?$ index.php?route=$1:$2&id=$3 [L,QSA]
</IfModule>
