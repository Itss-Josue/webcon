<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # üîπ Ajusta la ruta base seg√∫n la carpeta de tu proyecto en el hosting
    # Si tu sistema est√° en public_html/webcon/ usa esta:
    RewriteBase /webcon/

    # Redirigir la ra√≠z "/" al login de admin
    RewriteRule ^$ index.php?route=admin:login [L,QSA]

    # Todas las dem√°s rutas van a index.php manteniendo "route"
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L,QSA]
</IfModule>
