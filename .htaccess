<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /webcon/

    # Redirigir la raíz "/" al login de admin
    RewriteRule ^$ index.php?route=admin:login [L,QSA]

    # Todas las demás rutas van a index.php manteniendo "route"
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L,QSA]
</IfModule>
